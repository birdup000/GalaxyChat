<script type="text/javascript" src="https://unpkg.com/vanilla-tilt@1.7.0"></script>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@500&display=swap');


    .futuristic-btn {
        position: relative;
        display: inline-block;
        padding: 20px 40px;
        color: #000;
        text-transform: uppercase;
        letter-spacing: 4px;
        text-decoration: none;
        font-size: 24px;
        overflow: hidden;
        transition: 0.2s;
        background-color: #9CECFB;
        background-image: linear-gradient(19deg, #21D4FD 0%, #B721FF 100%);
        box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.2);
        border-radius: 10px;
        border: none;
        cursor: pointer;
        outline: none;
        transform-style: preserve-3d;
    }

    .futuristic-btn::before {
        position: absolute;
        content: "";
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.1);
        box-shadow: 0 0 5px rgba(255, 255, 255, 0.1),
            inset 0 0 5px rgba(255, 255, 255, 0.1);
        transition: all 0.5s;
        border-radius: 10px;
        pointer-events: none;
    }

    .icon {
        margin-right: 10px;
    }
</style>

<style>
    .container {
        perspective: 1000px;
    }

    .flip-card {
        width: 300px;
        height: 200px;
        border: 1px solid #f1f1f1;
        perspective: 1000px;
    }

    .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.8s;
        transform-style: preserve-3d;
    }

    .container:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front, .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .flip-card-front {
        background-color: #3b5998;
        color: white;
    }

    .flip-card-front button {
        font-size: 20px;
        padding: 10px 20px;
        color: #fff;
        background-color: transparent;
        border: none;
        cursor: pointer;
    }

    .flip-card-back {
        background-color: #2980b9;
        color: white;
        transform: rotateY(180deg);
    }

    .flip-card-back button {
        font-size: 20px;
        padding: 10px 20px;
        color: #fff;
        background-color: transparent;
        border: none;
        cursor: pointer;
    }
</style>

<style>
    .chat-stuff {
    display: flex;
    justify-content: space-around;
    padding: 150px;
}
</style>
</head>
<body>
    <div class="navbar">
        <div class="shooting-star"></div>
        <a href="/home">Home</a>
        <a href="/news">News</a>
        <a href="/chat">Chat</a>
        <a href="/videochathub">Video Chat</a>
    </div>


    <div class="chat-stuff">
        <p>Join a room by entering its id</p>
    <script>
        function process()
        {
            const url = "http://chat.birdup.link/" + document.getElementById("url").value;
            location.href = url;
            return false;
        }
    </script>

    <form onSubmit="return process();">
        <input type="text" name="url" id="url" placeholder="Room Code" required>
      <br>
      <br>
        <button class="futuristic-btn" id="tilt-button" type="submit">
            <img src="videocall.svg" class="icon" width="36" height="36">
            Join Video Call
        </button>
    </form>
    <script>
        VanillaTilt.init(document.querySelector("#tilt-button"), {
            max: 25,
            speed: 400
        });
    </script>


<p>See button below for creating a video chat</p>
<div class="container">
    <div class="flip-card">
        <div class="flip-card-inner">
            <div class="flip-card-front">
                <button>Hover Over Me</button>
            </div>
            <div class="flip-card-back">
                <button id="video-call-button">Create Video Call!</button>
            </div>
        </div>
    </div>
</div>
</div>
<script>
    document.getElementById('video-call-button').addEventListener('click', function(e) {
        e.preventDefault();
        window.location.href = "http://chat.birdup.link/videochat";
    });
</script>

